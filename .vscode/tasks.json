{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/.vscode/a.out",
                "-I${workspaceFolder}/include",
                "`pkg-config", "--cflags", "--libs", "opencv4`",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}